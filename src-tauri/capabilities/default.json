{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-app-read",
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "$HOME/**" }]
    },

    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "$HOME/**" }]
    },

    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$HOME/**" }]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://**"
        },
        {
          "url": "http://**"
        }
      ]
    },
    "dialog:default"
  ]
}

